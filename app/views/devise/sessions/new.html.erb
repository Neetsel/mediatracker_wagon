<h2 class="devise-header mt-2 mb-2 text-center">Log in</h2>

<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions d-flex justify-content-center mb-3">
      <%= f.button :submit, "Log in", class: "btn-cta" %>
    </div>
  <% end %>

  <div class="devise-shared-links mt-4 mb-2 d-flex flex-column align-items-center">
    <p>Don't have an account yet ? Create an account :</p>

    <%= render "devise/shared/links" %>
  </div>
</div>

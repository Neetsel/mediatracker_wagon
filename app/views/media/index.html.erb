<div class="container" id="media-index-container">
  <div class="container my-2 p-3">
    <h1 class="mb-4 text-center">All in one place</h1>
    <p class="text-center">Search for movies, video games or books !</p>

  </div>

  <div data-controller="media-search" class="media-search">

    <%= form_with url: search_media_path,
          method: :post,
          data: {
            action: "submit->media-search#submit", turbo: false
           },
          class: "input-group shadow-sm",
          id: "media-search-bar" do %>

    <%= text_field_tag :title, nil,
          class: "form-control form-control",
          id: "form-control-text",
          placeholder: "Enter a media title...",
          required: true %>

    <%= hidden_field_tag :medium_type, "",
      data: { media_search_target: "mediumType" } %>

      <button class="btn btn-primary btn-lg ms-2" id="search-button" type="submit">
        <i class="bi bi-search"></i><i class="fa-solid fa-magnifying-glass fa-lg"></i>
      </button>

    <% end %>

    <!-- Boutons (même controller, cachés au départ) -->
    <div class="mt-4 d-none"
        data-media-search-target="buttons">

      <h2 id="select-type-text">Chose a media type :</h2>
      <div id="media-type-list">
        <button class="btn-media-type"
          data-action="click->media-search#choose"
          data-medium="movie">
          <i class="fa-solid fa-video fa-lg" style="color: #000000ff; margin-right: 12px;"></i> Movies
        </button>

        <button class="btn-media-type"
          data-action="click->media-search#choose"
          data-medium="book">
          <i class="fa-solid fa-book-open fa-lg" style="color: #000000ff; margin-right: 12px;"></i> Books
        </button>

        <button class="btn-media-type"
          data-action="click->media-search#choose"
          data-medium="game">
          <i class="fa-solid fa-gamepad fa-lg" style="color: #000000ff; margin-right: 12px;"></i> Video Games
        </button>

      </div>
    </div>

  </div>

</div>

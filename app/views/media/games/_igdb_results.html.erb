<%= turbo_stream_from "igdb_results" %>
<% if results.present? %>
  <h3 class="mb-4 mt-4">Results :</h3>

  <div class="row">
    <% results.each_with_index do |medium, i| %>
      <% if medium["first_release_date"] %>
        <div class="search-media-cards col-md-3 mb-3 mt-3">

          <%# Image %>
          <div class="search-card-image">
            <% if medium["cover"] %>
              <%= image_tag medium["cover"], alt: medium["name"], class: "search-card-image-left" %>
            <% else %>
              <div class="bg-secondary text-light d-flex align-items-center justify-content-center" style="height: 200px; width: 140px;">
                No Poster
              </div>
            <% end %>
          </div>

          <%# Texte %>

          <div class="search-card-body d-flex flex-column justify-content-between">
            <h5 class="card-title"><%= medium["name"] %></h5>
            <p class="card-text"><%= medium["first_release_date"] %></p>

            <%# buttons %>
            <div class="list-icon">
              <%= render "shared/buttons/collection_card_button", medium: medium, medium_type: "game", year: medium["first_release_date"], ref_icon: "collection_icon_#{i}" %>
              <%= render "shared/buttons/like_card_button", medium: medium, medium_type: "game", year: medium["first_release_date"], ref_icon: "like_icon_#{i}" %>
              <%= render "shared/buttons/next_up_card_button", medium: medium, medium_type: "game", year: medium["first_release_date"], ref_icon: "next_up_icon_#{i}" %>
            </div>

            <div class="btn-more-details">
              <%= button_to "More details", create_record_media_path( medium: medium, medium_type: "game" ),
                    method: :post,
                    data: { turbo_frame: "_top" },
                    class: "btn btn-primary rounded-pill" %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>

  </div>

<% else %>
  <div class="alert alert-warning">No games found</div>
<% end %>

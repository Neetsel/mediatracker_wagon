<% if results.present? %>
  <h3 class="mb-4 mt-4">Results :</h3>

  <div class="row">
    <% results.each do |medium| %>
      <div class="col-md-3 mb-4">
        <div class="card h-100 shadow-sm">
          <% if medium["cover_edition_key"] %>
            <%= image_tag "https://covers.openlibrary.org/b/olid/#{medium["cover_edition_key"]}-M.jpg", alt: medium["title"], class: "card-img-top" %>
          <% else %>
            <div class="bg-secondary text-light d-flex align-items-center justify-content-center" style="height: 200px;">
              No Poster
            </div>
          <% end %>

          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= medium["title"] %></h5>
            <p class="card-text text-muted"><%= medium["first_publish_year"] %></p>

            <div class="mt-auto">
              <%= button_to "More details", create_from_open_library_media_path( key: medium["key"], title: medium["title"], cover: medium["cover_edition_key"], author: medium["author_name"], year: medium["first_publish_year"], cover_edition_key: medium["cover_edition_key"] ),
                    method: :post,
                    data: { turbo_stream: true },
                    class: "btn btn-primary w-100 rounded-pill ms-2" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-warning">No books found</div>
<% end %>

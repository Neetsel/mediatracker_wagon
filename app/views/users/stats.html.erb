<div class="container my-5 text-light p-5 rounded shadow text-center">
  <h1 class="mb-4" id="stats-title">A Little Recap for Your Media</h1>

  <div class="row">
    <div class="col-md-4 mb-4">
      <h2 class="box">  <%= @collection_media.count %> media collected üìö </h2>
    </div>
    <div class="col-md-4 mb-4">
      <h2 class="box"> <%= @next_up_media.count%> media next up ‚è≠Ô∏è </h2>
    </div>
    <div class="col-md-4 mb-4">
      <h2 class="box"> <%= @like_media.count%> media liked üíõ</h2>
    </div>
  </div>

  <h1 class="mb-4">Your recent activities </h1>
  <div class="row">
    <div class="card-stats mb-4">
      <%= image_tag @collection_media.last.poster_url, alt: @collection_media.last.title %>
      <div class="card-stats-infos">
        <h2><%= @collection_media.last.title %> </h2>
        <p>üìö Collected on <%= @collection_media.last.created_at.strftime("%H:%M - %b %d, %Y") %></p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="card-stats mb-4">
      <%= image_tag @next_up_media.last.poster_url, alt: @next_up_media.last.title %>
      <div class="card-stats-infos">
        <h2><%= @next_up_media.last.title %> </h2>
        <p>‚è≠Ô∏è planned on <%= @next_up_media.last.created_at.strftime("%H:%M - %b %d, %Y") %></p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="card-stats mb-4">
      <%= image_tag @like_media.last.poster_url, alt: @like_media.last.title %>
      <div class="card-stats-infos">
        <h2><%= @like_media.last.title %></h2>
        <p>üíõ liked on <%= @like_media.last.created_at.strftime("%H:%M - %b %d, %Y") %></p>
      </div>
    </div>
  </div>

  <h2 class="mb-4 text-center">You have collected <%= @collection_media.count%> media</h2>
  <div id="collectionCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% @collection_media.each_with_index do |medium, index| %>
        <div class="carousel-item <%= 'active' if index == 0 %>">
          <div class="list-media-cards d-flex justify-content-center">

            <div class="list-card-image">
              <%= link_to medium_path(medium) do %>
                <%= image_tag medium.poster_url, alt: medium.title, class: "d-block w-100 list-card-image-left" %>
              <% end %>
            </div>

            <div class="list-card-body d-flex flex-column justify-content-between text-center mt-3">
              <%= link_to medium_path(medium) do %>
                <h5 class="card-title"><%= medium.title %></h5>
              <% end %>

              <div class="icon-media-type mt-2">
                <% if medium.sub_media_type == "Movie" %>
                  <i class="fa-solid fa-video fa-lg" style="color: #ffffffff; margin-right: 12px;"></i>
                <% elsif medium.sub_media_type == "Book" %>
                  <i class="fa-solid fa-book-open fa-lg" style="color: #ffffffff; margin-right: 12px;"></i>
                <% else %>
                  <i class="fa-solid fa-gamepad fa-lg" style="color: #ffffffff; margin-right: 12px;"></i>
                <% end %>
              </div>

              <div class="btn-more-details mt-3">
                <%= link_to "More details", medium_path(medium), class: "btn btn-primary rounded-pill" %>
              </div>
            </div>

          </div>
        </div>
      <% end %>
    </div>

      <!-- Contr√¥les du carrousel -->
    <button class="carousel-control-prev" type="button" data-bs-target="#collectionCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Pr√©c√©dent</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#collectionCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Suivant</span>
    </button>
  </div>


  <h2 class="mb-4 text-center">You have <%= @next_up_media.count%> media waiting in line</h2>
    <div id="nextUpCarousel" class="carousel slide" data-bs-ride="carousel">

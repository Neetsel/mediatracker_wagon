                  <% end %>
                </div>

                <div class="btn-more-details mt-3">
                  <%= link_to "More details", medium_path(medium), class: "btn btn-primary rounded-pill" %>
                </div>
              </div>

            </div>
          </div>
        <% end %>
      </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#nextUpCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Pr√©c√©dent</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#nextUpCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Suivant</span>
    </button>
  </div>

  <h2 class="mb-4 text-center">You have liked <%= @like_media.count%> media</h2>
    <div id="likeCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% @like_media.each_with_index do |medium, index| %>
          <div class="carousel-item <%= 'active' if index == 0 %>">

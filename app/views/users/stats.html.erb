                <div class="btn-more-details mt-3">
                  <%= link_to "More details", medium_path(medium), class: "btn btn-primary rounded-pill" %>
                </div>
              </div>

            </div>
          </div>
        <% end %>
      </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#likeCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Pr√©c√©dent</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#likeCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Suivant</span>
    </button>
  </div>
</div>

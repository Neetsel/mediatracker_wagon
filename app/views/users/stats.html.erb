                <%= link_to medium_path(medium) do %>
                  <%= image_tag medium.poster_url, alt: medium.title, class: "d-block mx-auto carousel-card-image-top" %>
                <% end %>
              </div>

              <div class="carousel-card-body d-flex flex-row justify-content-center text-center mt-3">
                <%= link_to medium_path(medium) do %>

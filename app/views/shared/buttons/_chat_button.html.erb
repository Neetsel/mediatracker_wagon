<% if Chat.find_by(medium_id: medium.id, user_id: current_user.id).nil? %>
  <%= button_to medium_chats_path(medium.id), data: { turbo_method:"POST" }, class: "btn-cta btn-cta-bottom-show" do %>
    <i class="fa-solid fa-comments"></i> Chat
  <% end %>
<% else %>
  <%= link_to chat_path(Chat.find_by(medium_id: medium.id, user_id: current_user.id)), data: { turbo_method:"GET" }, class: "btn-cta btn-cta-bottom-show" do %>
    <i class="fa-solid fa-comments"></i> Chat
  <% end %>
<% end %>

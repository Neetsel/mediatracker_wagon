<div data-controller="next-up-icon"
  data-next-up-icon-title-movie-value="<%=medium["Title"]%>"
  data-next-up-icon-id-movie-value="<%=medium["imdbID"]%>"
  data-next-up-icon-title-book-value="<%=medium["title"]%>"
  data-next-up-icon-id-book-value="<%=medium["key"]%>"
  data-next-up-icon-cover-book-value="<%=medium["cover_edition_key"]%>"
  data-next-up-icon-author-book-value="<%=medium["author_name"]%>"
  data-next-up-icon-title-game-value="<%=medium["name"]%>"
  data-next-up-icon-id-game-value="<%=medium["id"]%>"
  data-next-up-icon-cover-game-value="<%=medium["cover"]%>"
  data-next-up-icon-developer-value="<%=medium["developer"]%>"
  data-next-up-icon-publisher-value="<%=medium["publisher"]%>"
  data-next-up-icon-platforms-value="<%=medium["platforms"]%>"
  data-next-up-icon-story-duration-value="<%=medium["main_story_duration"]%>"
  data-next-up-icon-extras-duration-value="<%=medium["main_extras_duration"]%>"
  data-next-up-icon-completionist-duration-value="<%=medium["completionist_duration"]%>"
  data-next-up-icon-year-value="<%=medium["year"]%>"
  data-next-up-icon-medium-type-value="<%=medium["sub_media_type"]%>"
  data-next-up-icon-settings-value="next_up"
  data-next-up-icon-location-value="<%=location%>">
  <button data-action="click->next-up-icon#toggleNextUp" data-next-up-icon-target="button" class="btn-hidden">
    <% if location === "card" %>
      <i class="fa-regular fa-calendar" data-next-up-icon-target="icon"></i>
    <% else %>
      <i class="fa-regular fa-calendar" data-next-up-icon-target="icon"></i> <span data-next-up-icon-target="text">Add to next up</span>
    <% end %>
  </button>
</div>

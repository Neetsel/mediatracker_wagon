<% if Collection.find_by(medium_id: medium.id, user_id: current_user.id).nil? %>
  <%= link_to medium_collections_path(medium), data: { turbo_method:"POST" } do %>
    <i class="fa-regular fa-eye"></i>
  <% end %>
<% else %>
  <%= link_to medium_collections_path(Collection.find_by(medium_id: medium.id, user_id: current_user.id)), data: { turbo_method: "DELETE" } do %>
    <i class="fa-solid fa-eye"></i>
  <% end %>
<% end %>

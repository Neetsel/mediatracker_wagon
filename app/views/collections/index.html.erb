<div class="container">

  <h1 class="mb-4 text-center">Your collection</h1>

  <% if @collections.present? %>
    <div class="row">
      <% @collections.each do |collection| %>
      <div class="list-media-cards col-md-3 mb-3 mt-3">

        <div class="list-card-image">
          <%= link_to medium_path(collection.medium) do %>
            <%= image_tag collection.medium.poster_url, alt: collection.medium.title, class: "list-card-image-left"%>
          <% end %>
        </div>

        <div class="list-card-body d-flex flex-column justify-content-between">
          <%= link_to medium_path(collection.medium) do %>
            <h5 class="card-title"><%= collection.medium.title %></h5>
            <p class="card-text"><%= collection.medium.year %></p>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  <% else %>
    <p>Start your collection now !</p>
  <% end %>


  <div class="d-flex justify-content-center mt-4">
    <%= paginate @collections %>
  </div>

</div>

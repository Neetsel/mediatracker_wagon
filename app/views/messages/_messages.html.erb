  <% messages.each do |message| %>
    <% if message.role == "user" %>
      <span class="header-message d-flex justify-content-end mt-3 mb-1 me-2"><i class="fa-regular fa-user"></i></span>
      <div class="d-flex justify-content-end mb-2">
        <div class="px-3 pb-0 pt-3 rounded-4 text-light user-message" >
          <%= raw(render_markdown(message.content)) %>
        </div>
      </div>
    <% elsif message.role == "assistant" %>
      <span class="header-message d-flex justify-content-start mt-4 ms-2"><i class="fa-solid fa-robot"></i></span>
      <div class="d-flex justify-content-start mb-5">
        <div class="px-3 pb-0 pt-3">
          <%= raw(render_markdown(message.content)) %>
        </div>
      </div>
    <% end %>
  <% end %>
